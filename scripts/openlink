#!/usr/bin/env python3

# openlink
# Opens youtube links in mpv (youtube-dl), and normal in firefox
# also Google search everything else.

import subprocess
from urllib.parse import quote


def run(params):
    subprocess.Popen(
        params,
        stdin=None,
        stdout=None,
        stderr=None,
        close_fds=True
    )


def main():
    clipboard = subprocess.check_output(['xclip', '-o']).decode('utf8').strip()

    url = None
    mpv_url = None

    if len(clipboard.split('\n')) == 1 and clipboard.startswith(('http://', 'https://')):
        if clipboard.split('//')[1].startswith((
            'www.youtube.com/watch',
            'youtube.com/watch',
            'www.youtu.be',
            'youtu.be'
        )):
            mpv_url = clipboard
        else:
            url = clipboard
    else:
        url = 'https://encrypted.google.com/search?q={}'.format(quote(clipboard))

    if url:
        run(['firefox', '--new-tab', url])
    elif mpv_url:
        run(['mpv', mpv_url])


if __name__ == "__main__":
    main()
